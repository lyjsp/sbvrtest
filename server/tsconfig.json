{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "paths": {}
  },
  "include": [
    "../common/src/**/*.ts",
    "../common/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "files": ["src/global.d.ts"]
}
