{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "../",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "paths": {}
  },
  "include": ["src/**/*", "../common/src/**/*.ts", "../common/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
