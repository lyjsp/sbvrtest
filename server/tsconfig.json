{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@common/*": ["../common/src/*"],
      "@common": ["../common/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../common/src/**/*.ts", "../common/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
